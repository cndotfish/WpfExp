<Window x:Class="WpfExp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Label Content="当前值：" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Center" />
            <TextBlock Height="23" HorizontalAlignment="Center" Name="textBlock1" Text="初始" VerticalAlignment="Center" Margin="12,0,12,0" />
        </StackPanel>        
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
            <Button Content="Thread" Height="23" Name="button1"  Click="button1_Click" />
            <Button Content="Delegate" Height="23" Name="button2"  Click="button1_Click" />
            <Button Content="Dispatcher" Height="23" Name="button3"  Click="button1_Click" />
            <Button Content="DispatcherTimer" Height="23" Name="button4" Click="button1_Click" />
            <Button Content="BackgroundWorker" Height="23" Name="button5" Click="button1_Click" />
        </StackPanel>
    </Grid>
</Window>
